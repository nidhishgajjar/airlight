{
  "name": "chad-pro",
  "version": "1.0.0",
  "description": "Easiest way to access your favourite Web Apps.",
  "author": "Constitute AI",
  "private": true,
  "main": "public/electron.js",
  "homepage": "./",
  "dependencies": {
    "@testing-library/jest-dom": "^6.1.3",
    "@testing-library/react": "^14.0.0",
    "@testing-library/user-event": "^14.5.1",
    "autoprefixer": "^10.4.16",
    "concurrently": "^8.2.1",
    "dotenv": "^16.3.1",
    "electron-auto-launch": "^5.0.7",
    "electron-localshortcut": "^3.2.1",
    "electron-log": "^4.4.8",
    "electron-notarize": "^1.2.2",
    "electron-updater": "^6.1.4",
    "html-metadata-parser": "^2.0.4",
    "postcss": "^8.4.31",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-icons": "^4.11.0",
    "react-modal": "^3.16.1",
    "react-router-dom": "^6.16.0",
    "react-scripts": "5.0.1",
    "tailwindcss": "^3.3.3",
    "universal-analytics": "^0.5.3",
    "uuid": "^9.0.1",
    "wait-on": "^7.0.1",
    "xml2js": "^0.6.2"
  },
  "scripts": {
    "react-start": "react-scripts start",
    "react-build": "react-scripts build",
    "react-test": "react-scripts test",
    "react-eject": "react-scripts eject",
    "start": "npm run react-start",
    "electron": "electron .",
    "build": "npm run react-build",
    "build-mac": "electron-builder --mac --arm64 --x64 --publish always",
    "build-win": "electron-builder --win",
    "electron-build": "electron-builder",
    "release": "electron-builder --publish always"
  },
  "build": {
    "productName": "Chad",
    "appId": "ai.constitute.chad",
    "afterSign": "./notarize.js",
    "asar": true,
    "files": [
      "build/**/*",
      "public/electron.js",
      "public/preload.js",
      "public/link.png"
    ],
    "directories": {
      "buildResources": "assets"
    },
    "extraResources": [
      {
        "from": "public/link.png",
        "to": "link.png"
      }
    ],
    "mac": {
      "icon": "public/icon.png",
      "category": "public.app-category.productivity",
      "type": "distribution",
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "target": [
        "dmg",
        "zip"
      ],
      "extendInfo": {
        "LSUIElement": 1
      }
    },
    "dmg": {
      "sign": false
    },
    "win": {
      "icon": "public/icon.png",
      "target": "nsis"
    },
    "publish": [
      {
        "provider": "s3",
        "bucket": "chad-distributable",
        "region": "us-east-1"
      }
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@babel/plugin-proposal-private-property-in-object": "^7.21.11",
    "electron": "^26.2.4",
    "electron-builder": "^24.6.4"
  }
}
