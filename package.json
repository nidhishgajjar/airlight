{
  "name": "chad",
  "version": "1.0.1",
  "description": "A modern browser in the form of an Assistant",
  "author": "Constitute",
  "private": true,
  "main": "public/electron.js",
  "homepage": "./",
  "dependencies": {
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^13.4.0",
    "@testing-library/user-event": "^13.5.0",
    "autoprefixer": "^10.4.14",
    "concurrently": "^8.0.1",
    "electron-auto-launch": "^5.0.7",
    "electron-updater": "^5.3.0",
    "postcss": "^8.4.21",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-icons": "^4.8.0",
    "react-modal": "^3.16.1",
    "react-scripts": "5.0.1",
    "tailwindcss": "^3.3.1",
    "uuid": "^9.0.0",
    "wait-on": "^7.0.1"
  },
  "scripts": {
    "react-start": "react-scripts start",
    "react-build": "react-scripts build",
    "react-test": "react-scripts test",
    "react-eject": "react-scripts eject",
    "start": "npm run react-start",
    "electron": "electron .",
    "build": "npm run react-build",
    "build-mac": "electron-builder --mac --arm64 --x64",
    "build-win": "electron-builder --win",
    "electron-build": "electron-builder",
    "release": "npm run build && electron-builder --publish always"
  },
  "build": {
    "productName": "Chad",
    "appId": "ai.constitute.chad",
    "files": [
      "build/**/*",
      "public/electron.js",
      "public/preload.js",
      "public/link.png"
    ],
    "directories": {
      "buildResources": "assets"
    },
    "extraResources": [
      {
        "from": "public/link.png",
        "to": "link.png"
      }
    ],
    "mac": {
      "icon": "public/icon.png",
      "target": "dmg",
      "extendInfo": {
        "LSUIElement": 1
      }
    },
    "win": {
      "icon": "public/icon.png",
      "target": "nsis"
    },
    "publish": [ 
      {
        "provider": "github",
        "repo": "chad",
        "owner": "nidhishgajjar",
        "token": "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",
        "releaseType": "release"
      }

  ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "electron": "^24.0.0",
    "electron-builder": "^23.6.0"
  }
}
